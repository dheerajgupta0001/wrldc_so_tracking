@page
@model WebApp.Pages.ReferenceNumbers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reference Number Generator</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReferenceNumber.Name" class="control-label"></label>
                <input asp-for="ReferenceNumber.Name" class="form-control" />
                <span asp-validation-for="ReferenceNumber.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReferenceNumber.DepartmentId" class="control-label required-field">Department</label>
                <select asp-for="ReferenceNumber.DepartmentId" class="form-control" asp-items="Model.DeptOptions"></select>
                <span asp-validation-for="ReferenceNumber.DepartmentId " class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
